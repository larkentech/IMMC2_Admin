<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderCard"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0dp"
        android:layout_marginBottom="1dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <TextView
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chemical Engineering "
                    android:fontFamily="@font/latoblack"
                    android:textSize="20sp"
                    android:textColor="#111"
                    android:layout_margin="8dp"/>

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:layout_below="@id/bookName"
                    android:text="#152, 1st Stage, 3rd Cross, Kuvempunagar, Mysore - 570023"
                    android:fontFamily="@font/latoblack"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 4000/- Paid"
                        android:id="@+id/bookPrice"
                        android:layout_below="@id/address"
                        android:fontFamily="@font/latoblack"
                        android:textSize="16sp"
                        android:textColor="#111"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qut: 4"
                        android:id="@+id/quantity"
                        android:layout_toEndOf="@id/bookPrice"
                        android:layout_below="@id/address"
                        android:fontFamily="@font/latoblack"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="30dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Date: "
                        android:fontFamily="@font/latoblack"
                        android:textSize="14sp"
                        android:id="@+id/bD"
                        android:layout_below="@id/bookPrice"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 24/02/2018"
                        android:fontFamily="@font/latoblack"
                        android:textSize="14sp"
                        android:layout_toEndOf="@id/bD"
                        android:id="@+id/orderDate"
                        android:layout_below="@id/bookPrice"
                        android:textColor="#111"
                        android:layout_marginTop="8dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ph: 9066776695"
                        android:id="@+id/phno"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/latoblack"
                        android:textSize="14sp"
                        android:textColor="#111"
                        android:layout_below="@+id/bD"
                        android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" TXN ID: "
                android:id="@+id/txn"
                android:layout_toLeftOf="@id/txnNum"
                android:fontFamily="@font/latoblack"
                android:textSize="12sp"
                android:layout_below="@+id/orderDate"
                android:layout_marginTop="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 9066776695"
                android:id="@+id/txnNum"
               android:layout_alignParentEnd="true"
                android:fontFamily="@font/latoblack"
                android:textSize="12sp"
                android:textColor="#111"
                android:layout_below="@+id/orderDate"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>


