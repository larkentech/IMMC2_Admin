<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddBookFragment">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="3dp">

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:fontFamily="@font/latoblack"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="3dp">

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:fontFamily="@font/latoblack"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="3dp">

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:fontFamily="@font/latoblack"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="3dp">

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:fontFamily="@font/latoblack"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Book Name"
        android:textSize="20sp"
        android:layout_height="35dp"/>

    <EditText
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Designer Name"
        android:textSize="20sp"
        android:layout_height="35dp"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Category"
        android:textSize="20sp"
        android:layout_height="35dp"
        android:entries="@array/book_category"/>

    <Spinner
        android:id="@+id/subCategorySpinner"
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Sub-Category"
        android:textSize="20sp"
        android:layout_height="35dp"/>

    <EditText
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Price in Rs."
        android:textSize="20sp"
        android:layout_height="35dp"/>

    <EditText
        android:background="@drawable/edit_text_shape1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:hint="Description"
        android:textSize="20sp"
        android:layout_height="120dp"/>
    
    <Button
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create Book"
        android:textColor="#ffffff"
        android:fontFamily="@font/latoblack"
        android:background="@drawable/button_shape"/>

</LinearLayout>