<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AddBookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard1"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard2"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard3"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard4"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard5"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard6"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoCard7"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/bookImage7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_photo" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <EditText
            android:id="@+id/bookName"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:elevation="3dp"
            android:hint="Book Name"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/designerName"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:hint="Designer Name"
            android:padding="10dp"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:entries="@array/book_category"
            android:hint="Category"
            android:padding="10dp"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/subCategorySpinner"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:hint="Sub-Category"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:hint="Price in Rs."
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_shape1"
            android:hint="Description"
            android:padding="10dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/createBook"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/latoblack"
            android:text="Add Book"
            android:textColor="#ffffff" />


    </LinearLayout>



</ScrollView>