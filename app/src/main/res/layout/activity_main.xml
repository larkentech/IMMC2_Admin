<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login ID:"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/latoblack"/>


        <TextView
            android:id="@+id/adminLoginId"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/addBook"
            android:layout_marginStart="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"

            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Book"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new book to library"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editBook"
            android:layout_marginStart="18dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Book"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit book to library"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_width="180dp"
            android:id="@+id/deleteBook"
            android:layout_gravity="center"
            android:layout_height="180dp"
            app:cardCornerRadius="10dp"
            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Book"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Book from Library"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/orders"
            android:layout_marginStart="18dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all Order Details"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/transaction"
            android:layout_marginStart="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"

            app:cardCornerRadius="10dp"
            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all Transactions"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/feedback"
            android:layout_marginStart="18dp"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="180dp"
            app:cardCornerRadius="10dp"
            android:elevation="3dp">

            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:fontFamily="@font/latoblack"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read all Feedback"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>