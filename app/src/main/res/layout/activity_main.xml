<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login ID:"
                android:id="@+id/log"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold"/>


            <TextView
                android:id="@+id/adminLoginId"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_toEndOf="@+id/log"
                android:textColor="#000000"/>


        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/addBook"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#03A9F4"
                app:cardCornerRadius="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="130dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/add_icon"/>


                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Book"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="145dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add new book to library"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/editBook"
                android:layout_marginStart="16dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F26C62"
                android:elevation="3dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="130dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/edit_icon"/>

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Book"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="145dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit book to library"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:id="@+id/deleteBook"
                android:layout_gravity="center"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#5ACB5E"
                android:elevation="3dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="130dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_icon"/>

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Book"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="145dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Book from Library"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/orders"
                android:layout_marginStart="16dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#3F51B5"
                android:elevation="3dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="130dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/orders_icon"/>

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="145dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all Order Details"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal"
            android:weightSum="2">



            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#673AB7"
                android:id="@+id/feedback"
                android:layout_marginStart="18dp"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="180dp"
                app:cardCornerRadius="14dp"
                android:elevation="3dp">

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="145dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read all Feedback"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat_regular"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Sign Out"
            android:layout_marginEnd="10dp"
            android:id="@+id/signOut"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
            android:fontFamily="@font/montserrat_bold"
            android:background="@android:color/transparent"/>


    </LinearLayout>



</ScrollView>